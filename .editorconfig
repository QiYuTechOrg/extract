root = true

[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
charset = utf-8
indent_size = 4
indent_style = space

[*.py]
max_line_length = 120

[{Makefile, *.mk}]
indent_style = tab
indent_size = 8

[*.{json, yaml, yml}]
indent_size = 2

[*.md]
max_line_length = off
