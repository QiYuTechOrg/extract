{
  "compilerOptions": {
    "allowJs": true,
    "module": "esnext",
    "skipLibCheck": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "lib": [
      "esnext",
      "es6",
      "dom",
      "dom.iterable"
    ],
    "removeComments": true,
    "target": "ES2020",
    "noImplicitAny": false,
    "resolveJsonModule": true
  },
  "include": [
    "src/**/code.ts"
  ]
}
